/* pages/common/subGrid/item-grid.wxss */

.content {
  margin: 10rpx;
  height: 200rpx;
  background-color: white;
}
.swiper-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  padding-bottom: 50rpx;
}
.item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.item image {
  background-color: #999;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
}

.item text {
  margin-top: 8rpx;
  font-size:12px;
  color: #999;
}

