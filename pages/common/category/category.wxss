@import '../../../utils/css/weui.wxss';
@import '../../../utils/css/animate.wxss';
.content {
  position: fixed;
  top: 0rpx;
  left: 0;
  width: 100%;
  bottom: 0;
  background-color: rgba(50, 89, 139, 0.96);
  z-index: 200;
}
.section-header-1 {
  background-color: rgb(36, 78, 133);
  display: flex;
  flex-direction: row;
  height: 50rpx;
  justify-content: space-between;
  padding: 10rpx 20rpx;
  align-items: center;
}
.section-header-1 text:first-child {
  color: white;
  font-size: 14px;
}
.section-header-1 view text:first-child {
  color: gray;
  font-size: 10px;
  height: 40rpx;
  padding: 4rpx 8rpx;
  border-radius: 15rpx;
  border: 1px solid gray;
}

.section-header-1 view text:last-child {
  color: white;
  font-size: 14px;
  margin: 4rpx 20rpx;
}
.selected-items {
  margin: 20rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.selected-items .selected-item {
  width: 120rpx;
  display: inline-block;
  height: 50rpx;
  color:white;
  margin: 10rpx;
  text-align: center;
  font-size: 16px;
  background-color: rgb(138, 168, 207);
}
.selected-items .selected-item  text {
  width: 100%;
  line-height: 50rpx;
}
.section-header-2 {
  background-color: rgb(138, 168, 207);
  width: 100%;
  height: 70rpx;
  align-items: center;
  padding: 0 30rpx;
  font-size: 14px;
  color: white;
}
.section-header-2 text {
  line-height: 70rpx;
}
.unselect-item {
  height: 80rpx;
  display: flex;
  flex: row;
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #999;
}
.unselect-item text:first-child {
  color: white;
  flex: 1;
  font-size: 16px;
}

.unselect-item text:last-child {
  color: white;
  width: 50rpx;
  font-size: 23px
}

